@model List<CoffeeHouse.Models.CoffeeItem>

@{
    ViewData["Title"] = "Menu editor";
}

<div class="container mt-5 pt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning">Restaurant's menu</h2>
        <a asp-action="Create" class="btn btn-success fw-bold">+ Add item</a>
    </div>

    <div class="card bg-dark shadow-lg border-secondary">
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr class="text-warning">
                        <th>Name and Description</th>
                        <th>Price</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <h5 class="mb-0 text-white">@item.Name</h5>
                                <small class="text-muted">@item.Description</small>
                            </td>
                            <td class="align-middle fs-5 fw-bold text-warning">@item.Price €</td>
                            <td class="align-middle text-end">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('You sure you want to delete? @item.Name?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-light">← Back to panel</a>
    </div>
</div>