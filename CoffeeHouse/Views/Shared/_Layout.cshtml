@using Microsoft.AspNetCore.Http
@* CART LOGIC (We count for everyone: guests and admins) *@
@{
    var sessionCart = Context.Session.GetString("Cart");
    var count = 0;
    if (!string.IsNullOrEmpty(sessionCart))
    {
        count = System.Text.Json.JsonSerializer.Deserialize<List<int>>(sessionCart).Count;
    }
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CoffeeHouse - Premium Taste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --gold: #d4af37;
            --dark: #121212;
            --dark-card: #1c1c1c;
            --text-gray: #b0b0b0;
        }

        body {
            background-color: var(--dark);
            color: white;
            font-family: 'Lato', sans-serif;
        }

        h1, h2, h3, .navbar-brand {
            font-family: 'Playfair Display', serif;
        }

        .navbar {
            background: rgba(18, 18, 18, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #333;
        }

        .navbar-brand {
            color: var(--gold) !important;
            font-size: 1.5rem;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #fff !important;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: var(--gold) !important;
            }

        footer {
            border-top: 1px solid #333;
            margin-top: auto;
            padding: 20px 0;
            background-color: var(--dark-card);
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index"><i class="fas fa-coffee me-2"></i>CoffeeHouse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Menu">Menu</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contacts</a></li>

                        @* // control for auth *@
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold" href="/Admin/Index">Admin panel</a>
                                </li>
                            }

                            // cart (only for authorized persons)
                            <li class="nav-item me-3">
                                <a class="nav-link position-relative" href="/Cart/Index">
                                    <i class="fas fa-shopping-cart fa-lg"></i>
                                    @if (count > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @count
                                        </span>
                                    }
                                </a>
                            </li>

                            <li class="nav-item">
                                <span class="nav-link text-warning">Hey, @User.Identity?.Name!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/Logout">Exit</a>
                            </li>
                        }
                        else
                        {
                            // if guest - only SIGN UP
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="/Auth/Login">Sign up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="text-center text-muted">
        <div class="container">
            &copy; 2025 CoffeeHouse. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>