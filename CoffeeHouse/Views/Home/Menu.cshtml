@model List<CoffeeHouse.Models.CoffeeItem>

@{
    ViewData["Title"] = "Our menu";
}

<div class="container py-5">
    <div class="text-center mb-5" style="margin-top: 80px;">
        <h1 class="display-4 fw-bold text-white">Menu</h1>
        <p class="text-secondary fs-5">Perfectly roasted coffee and fresh desserts</p>
        <div style="width: 60px; height: 3px; background-color: #d4af37; margin: 20px auto;"></div>
    </div>

    <div class="row g-4">

        @if (Model.Count == 0)
        {
            <div class="col-12 text-center text-muted">
                <h3>Menu is empty yet:(</h3>
                <p>Go to the admin panel to add dishes.</p>
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-lg" style="background-color: #1e1e1e; transition: transform 0.3s;">

                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-mug-hot fa-3x text-warning"></i>
                        </div>

                        <h3 class="card-title text-white mb-3">@item.Name</h3>

                        <p class="card-text text-secondary mb-4">
                            @item.Description
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-auto border-top border-secondary pt-3">
                            <div class="d-flex justify-content-between align-items-center mt-auto border-top border-secondary pt-3">
                                <span class="fs-4 fw-bold text-warning me-3">@item.Price â‚¬</span>

                                @* *@
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id"
                                       class="btn btn-outline-warning btn-sm rounded-pill px-3">
                                        To cart
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Auth" asp-action="Login"
                                       class="btn btn-secondary btn-sm rounded-pill px-3">
                                        Login to make an order
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(212, 175, 55, 0.1) !important;
        color: #ffffff;
        border: 1px solid #d4af37 !important;
    }
</style>