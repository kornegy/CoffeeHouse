@model List<CoffeeHouse.Models.CoffeeItem>

@{
    ViewData["Title"] = "Cart";
    decimal total = Model.Sum(x => x.Price);
}

<div class="container py-5 mt-5">
    <h2 class="text-white mb-4"><i class="fas fa-shopping-cart text-warning me-2"></i>Your order</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-dark text-center">
            <h4>Cart is empty 😔</h4>
            <a href="/Home/Menu" class="btn btn-warning mt-3">Go to menu</a>
        </div>
    }
    else
    {
        <div class="card bg-dark border-secondary">
            <div class="card-body p-0">
                <table class="table table-dark mb-0">
                    <thead>
                        <tr class="text-warning">
                            <th>Name</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price €</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-secondary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Total: <span class="text-warning fw-bold">@total €</span></h4>
                <div>
                    <a asp-action="Clear" class="btn btn-outline-light me-2">Clear</a>
                    <button class="btn btn-warning fw-bold">Make order</button>
                </div>
            </div>
        </div>
    }
</div>